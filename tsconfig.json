{
  "include": [
    "NetscriptDefinitions.d.ts",
    "src/**/*"
  ],
  "exclude": [
    "src/lib/react.ts"
  ],
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "esModuleInterop": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "strict": true,
    "rootDir": "src/",
    "outDir": "dist/",
    "baseUrl": "src/",
    "allowJs": true,
    "jsx": "react",
    "paths": {
      "@ns": [
        "types/NetscriptDefinitions.d.ts"
      ],
      "@react": [
        "lib/react.ts"
      ],
      "/*": [
        "*"
      ],
    }
  }
}